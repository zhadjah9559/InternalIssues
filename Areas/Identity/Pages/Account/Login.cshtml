
@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth auth-bg-1 theme-one">
                <div class="row w-100">
                    <div class="col-lg-4 mx-auto">
                        <div class="auto-form-wrapper">
                            <form id="account" method="post">
                                <div class="form-group">
                                    <label class="label" asp-for="Input.Email">Email</label>
                                    <div class="input-group">
                                        <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="mdi mdi-check-circle-outline"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="label" asp-for="Input.Password">Password</label>
                                    <div class="input-group">
                                        <input type="password" asp-for="Input.Password" class="form-control" placeholder="*********" />
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="mdi mdi-check-circle-outline"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary submit-btn btn-block" type="submit">Login</button>
                                </div>
                                <div class="form-group d-flex justify-content-between">
                                    <div class="form-check form-check-flat mt-0">
                                        <label class="form-check-label">
                                            <input asp-for="Input.RememberMe" class="form-check-input" /> Keep me signed in
                                        </label>
                                    </div>
                                    <a asp-page="./ForgotPassword" class="text-small forgot-password text-black">Forgot Password</a>
                                </div>
                                @*<div class="form-group">
                                    <button class="btn btn-block g-login">
                                        <img class="mr-3" src="../../../assets/images/file-icons/icon-google.svg" alt="">Log in with Google
                                    </button>
                                </div>*@
                                <div class="text-block text-center my-3">
                                    <span class="text-small font-weight-semibold">Not a member ?</span>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-black text-small">Create new account</a>
                                </div>
                            </form>
                        </div>
                        

                        <div class="auto-form-wrapper pt-0 mt-1" >
                            <div class="container">

                                <div class="row justify-content-center">
                                    <h5>Demo Logins</h5>
                                </div>

                                <div class="row justify-content-center">
                                    @*Appsettings.json holds the login info for all the demo users utilizing `key:value` notation*@
                                    <form method="post">
                                        <div class="row justify-content-center">
                                            <button type="submit" name="demoEmail" value="DemoAdminEmail" class="btn btn-primary form-group">Demo Admin</button>
                                            <button type="submit" name="demoEmail" value="DemoPMEmail" class="btn btn-primary form-group ml-1">Demo PM</button>
                                        </div>

                                        <div class="row justify-content-center">
                                            <button type="submit" name="demoEmail" value="DemoDevEmail" class="btn btn-primary form-group">Demo Dev</button>
                                            <button type="submit" name="demoEmail" value="DemoSubEmail" class="btn btn-primary form-group ml-1">Demo Sub</button>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>




                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
</body>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
