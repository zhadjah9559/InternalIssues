@model IEnumerable<InternalIssues.Models.Project>

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col">
        <div class="card col-lg-12">
            <div class="card-header">
                <p>
                    <a asp-action="Create">Create New</a>
                </p>
            </div>

            <div class="card-body">
                <div class="row">

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.ImageFileName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImageFileData)
                                </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.Company)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.ImageFileName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ImageFileData)
                                    </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Company.Id)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>



    @section Scripts {
        <script src="//cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>

    }









